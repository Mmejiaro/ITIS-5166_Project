<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/connection.css" />
    <title>Event</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="content">
        <h2 id="event-title"><%= connection.name %></h2>
        <div class="event">
          <div id="event-img-container">
            <img id="event-img" src="<%= connection.img %>" alt="pizza party" />
          </div>
          <div class="event-info">
            <h3>Hosted by: <%= connection.hostName.firstName + ' ' +  connection.hostName.lastName %></h3>
            <p><%= connection.date %></p>
            <p><%= connection.startTime %> - <%= connection.endTime %></p>
            <p><%= connection.loc %></p>
          </div>
        </div>
        <div class="event-details">
          <h3>Details</h3>
          <p>
            <%= connection.details %>
          </p>
        </div>
        <% if(user == connection.hostName._id){ %>
          <form class="event-buttons">
            <button type="submit" formmethod="GET" formaction="/connections/<%= connection.id %>/edit">Update</button>
            <button type="submit" formmethod="POST" formaction="/connections/<%= connection.id %>?_method=DELETE">Delete</button>
          </form>
        <% } %>
      </div>
      <div class="rsvp">
        <p>1 people are going</p>
        <% if (user) {%>
          <% if(user != connection.hostName._id){ %>
            <p>RSVP to attend!</p>
            <div>
              <form>
                <button type="submit" id="rsvp-yes">Yes</button>
                <!-- formmethod="POST" formaction="/connections/<%= connection.id%>/rsvp" -->
                <button type="submit" id="rsvp-no">No</button>
                <button type="submit" id="rsvp-maybe">Maybe</button>
              </form>
            </div>
          <% } %>
        <% } %>
      </div>
    </main>
<%- include('../partials/footer.ejs') %>
