<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/newConnection.css" />
    <title>Update Connection</title>
  </head>

  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div id="form-container">
        <form class="form" method="POST" action="/connections/<%=connection.id%>?_method=PUT">
          
          <div class="form-input">
            <label for="event-category">Category:</label>
            <input id="event-category" type="text" value="<%= connection.category %>" name="category" required/>
          </div>
          
          <div class="form-input">
            <label for="event-title">Title:</label>
            <input id="event-title" type="text" value="<%= connection.name %>" name="name" required/>
          </div>

          <div class="form-input">
            <label for="details">Details:</label>
            <textarea id="details" name="details" required><%= connection.details %></textarea>
          </div>

          <div class="form-input">
            <label for="loc">Where:</label>
            <input id="loc" type="text" value="<%= connection.loc %>" name="loc" required/>
          </div>

          <div class="form-input">
            <label for="date">Date:</label>
            <input id="date" type="date" name="date" value="<%= connection.date %>" required/>
          </div>

          <div class="form-input">
            <label for="startTime">Start:</label>
            <input id="startTime" type="time" name="startTime" value="<%= connection.startTime %>" required/>
          </div>

          <div class="form-input">
            <label for="endTime">End:</label>
            <input id="endTime" type="time" name="endTime" value="<%= connection.endTime %>" required/>
          </div>

          <div class="form-input">
            <label for="img">Image URL:</label>
            <input id="img" type="text" value="<%= connection.img %>" name="img" required/>
          </div>

          <div class="form-input">
            <button type="submit">Update Connection</button>
          </div>
        </form>
      </div>
    </main>
<%- include('../partials/footer.ejs') %>