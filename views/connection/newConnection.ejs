<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/newConnection.css" />
    <title>New Connection</title>
  </head>

  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div id="form-container">
        <form class="form" action="/connections" method="POST">
          <div class="form-input">
            <label for="category">Category:</label>
            <input id="category" type="text" placeholder="category" name="category" required/>
          </div>

          <div class="form-input">
            <label for="event-title">Title:</label>
            <input id="event-title" type="text" placeholder="title" name="name" required/>
          </div>

          <div class="form-input">
            <label for="hostName">Host:</label>
            <input id="hostName" type="text" placeholder="host name" name="hostName" required/>
          </div>

          <div class="form-input">
            <label for="details">Details:</label>
            <textarea id="details" placeholder="description" name="details" required></textarea>
          </div>

          <div class="form-input">
            <label for="loc">Where:</label>
            <input id="loc" type="text" placeholder="location" name="loc" required/>
          </div>

          <div class="form-input">
            <label for="date">Date:</label>
            <input id="date" type="date" name="date" required/>
          </div>

          <div class="form-input">
            <label for="startTime">Start:</label>
            <input id="startTime" type="time" name="startTime" required/>
          </div>

          <div class="form-input">
            <label for="endTime">End:</label>
            <input id="endTime" type="time" name="endTime" required/>
          </div>

          <div class="form-input">
            <label for="img">Image URL:</label>
            <input id="img" type="url" placeholder="imageURL" name="img" required/>
          </div>

          <div class="form-input">
            <button type="submit">Create Connection</button>
          </div>
        </form>
      </div>
    </main>
<%- include('../partials/footer.ejs') %>
